{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Theme",
            "type": "shell",
            "command": "./build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Create production ZIP file for WordPress deployment"
        },
        {
            "label": "Check PHP Syntax",
            "type": "shell",
            "command": "find",
            "args": [
                ".",
                "-name",
                "*.php",
                "-not",
                "-path",
                "./dist/*",
                "-not",
                "-path",
                "./.git/*",
                "-exec",
                "php",
                "-l",
                "{}",
                ";"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "php",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^Parse error: (.+) in (.+) on line (\\d+)$",
                    "file": 2,
                    "line": 3,
                    "message": 1
                }
            },
            "detail": "Check all PHP files for syntax errors"
        },
        {
            "label": "Watch CSS Changes",
            "type": "shell",
            "command": "fswatch",
            "args": ["-o", "assets/css/", "|", "xargs", "-n1", "-I{}", "echo", "'CSS files changed - refresh browser'"],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Monitor CSS directory for changes (requires fswatch)"
        },
        {
            "label": "WordPress Theme Check",
            "type": "shell",
            "command": "wp",
            "args": ["theme", "status", "extrachill"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Check WordPress theme status and functionality"
        },
        {
            "label": "Flush Rewrite Rules",
            "type": "shell",
            "command": "wp",
            "args": ["rewrite", "flush"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Flush WordPress rewrite rules after taxonomy changes"
        },
        {
            "label": "Clean Build Directory",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "dist/"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Remove dist directory and all build artifacts"
        },
        {
            "label": "Debug Theme Loading",
            "type": "shell",
            "command": "echo",
            "args": ["Add to wp-config.php: define('WP_DEBUG', true); define('WP_DEBUG_LOG', true); define('SCRIPT_DEBUG', true);"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Enable WordPress debugging for theme development"
        }
    ]
}